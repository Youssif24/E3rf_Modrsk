<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
    android:background="@color/secondPrime"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/tch_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/e3rf1"
        android:padding="3dp"
        android:layout_marginTop="15dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إسم المُدرس : "
            android:textSize="16sp"
            android:textColor="@color/prime"
            />

        <TextView
            android:id="@+id/tch_specification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="التخصص : "
            android:textSize="14sp"
            android:textColor="#97999b"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_name"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tch_rate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4.0"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            />



    </LinearLayout>








</RelativeLayout>