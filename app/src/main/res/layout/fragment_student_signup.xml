<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.StudentSignupFragment"
    android:orientation="vertical"
    android:background="@drawable/new1"
    android:padding="30dp"
    android:layoutDirection="rtl"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/reg_profileImg"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_user"
        android:layout_gravity="center_horizontal"
        />


    <LinearLayout
        android:id="@+id/studentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#FFFF"

            >

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="الإسم"
                android:textColor="@color/lightGreen"
                android:textColorHint="#FFFF"
                android:id="@+id/std_signUp_nameEt"
                android:singleLine="true"

                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#FFF"
            android:layout_marginTop="20dp"
            >

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="السنة الدراسية"
                android:textColor="@color/lightGreen"
                android:id="@+id/std_signUp_studYearEt"
                android:textColorHint="#FFFF"
                android:singleLine="true"


                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColorHint="#FFF">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="المدرسة"
                android:textColor="@color/lightGreen"
                android:textColorHint="#FFFF"
                android:id="@+id/std_signUp_schoolEt"
                android:singleLine="true"


                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColorHint="#FFF">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="كلمة المرور"
                android:textColor="@color/lightGreen"
                android:textColorHint="#FFFF"
                android:id="@+id/std_signUp_passwordEt"
                android:singleLine="true"


                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_selector"
            android:text="تسجيل"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"

            />


    </LinearLayout>




    </LinearLayout>