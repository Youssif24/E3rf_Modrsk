<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
    android:layout_marginBottom="1dp"

    android:background="@color/secondPrime"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        android:elevation="5dp"
        card_view:cardCornerRadius="5dp"
        android:layout_marginBottom="2dp"
        android:background="@color/secondPrime"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:background="@color/secondPrime"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cmt_profileImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/e3rf1"
                android:padding="3dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cmt_std_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="إسم الطالب : "
                    android:textSize="14sp"
                    android:textColor="@color/prime"
                    />

                <TextView
                    android:id="@+id/cmt_detailsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="التخصص : "
                    android:textSize="12sp"
                    android:textColor="#97999b"
                    />

                <TextView
                    android:id="@+id/cmt_dateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="التاريخ : "
                    android:textSize="12sp"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    />



            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>